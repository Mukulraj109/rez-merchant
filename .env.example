# Rez Merchant App - Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the actual .env file to version control!

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
# Options: development, staging, production

APP_ENV=development
# Options: development, staging, production

EXPO_DEBUG=true
# Enable Expo debug mode (development only)

# =============================================================================
# API CONFIGURATION
# =============================================================================
EXPO_PUBLIC_API_BASE_URL=http://192.168.1.4:3001/api/v1
# Development: http://192.168.1.4:3001/api/v1 or http://localhost:3001/api/v1
# Staging: https://api-staging.rezmerchant.com/api/v1
# Production: https://api.rezmerchant.com/api/v1

EXPO_PUBLIC_API_TIMEOUT=30000
# API request timeout in milliseconds (30 seconds)

# =============================================================================
# WEBSOCKET/REAL-TIME CONFIGURATION
# =============================================================================
SOCKET_URL=http://192.168.1.4:3001
# Development: http://192.168.1.4:3001 or http://localhost:3001
# Staging: wss://api-staging.rezmerchant.com
# Production: wss://api.rezmerchant.com

SOCKET_TIMEOUT=10000
# WebSocket connection timeout in milliseconds

SOCKET_RECONNECT_DELAY=3000
# WebSocket reconnection delay in milliseconds

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH_TOKEN_KEY=@rez_merchant_auth_token
# AsyncStorage key for authentication token

AUTH_REFRESH_TOKEN_KEY=@rez_merchant_refresh_token
# AsyncStorage key for refresh token

TOKEN_EXPIRY_BUFFER=300
# Token refresh buffer in seconds (5 minutes before expiry)

SESSION_TIMEOUT=3600000
# Session timeout in milliseconds (1 hour)

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=10485760
# Maximum file upload size in bytes (10MB)

MAX_IMAGE_SIZE=5242880
# Maximum image size in bytes (5MB)

MAX_DOCUMENT_SIZE=10485760
# Maximum document size in bytes (10MB)

ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
# Comma-separated list of allowed image MIME types

ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
# Comma-separated list of allowed document MIME types

# =============================================================================
# CLOUDINARY (Image/Document Storage) - OPTIONAL
# =============================================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
# Your Cloudinary cloud name (leave blank if not using)

CLOUDINARY_UPLOAD_PRESET=merchant_unsigned
# Unsigned upload preset for direct uploads

CLOUDINARY_API_KEY=your_api_key
# Optional: For signed uploads

# NEVER COMMIT THIS SECRET!
# CLOUDINARY_API_SECRET=your_api_secret

# =============================================================================
# ERROR TRACKING & MONITORING - OPTIONAL
# =============================================================================
SENTRY_DSN=
# Sentry Data Source Name for error tracking
# Get from: https://sentry.io/settings/your-project/keys/

SENTRY_ENVIRONMENT=development
# Options: development, staging, production

SENTRY_ENABLED=false
# Enable/disable Sentry error tracking (true for production)

# =============================================================================
# ANALYTICS - OPTIONAL
# =============================================================================
GOOGLE_ANALYTICS_ID=
# Google Analytics tracking ID (optional)

MIXPANEL_TOKEN=
# Mixpanel analytics token (optional)

ANALYTICS_ENABLED=false
# Enable/disable analytics tracking (true for production)

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
ENABLE_PUSH_NOTIFICATIONS=true
# Enable push notifications

EXPO_PUSH_TOKEN=
# Expo push notification token (generated at runtime)

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_OFFLINE_MODE=true
# Enable offline mode and data caching

ENABLE_DARK_MODE=true
# Enable dark mode support

ENABLE_ANALYTICS_FORECASTING=true
# Enable predictive analytics and forecasting

ENABLE_BULK_OPERATIONS=true
# Enable bulk import/export operations

ENABLE_TEAM_MANAGEMENT=true
# Enable team and role-based access control

ENABLE_AUDIT_LOGS=true
# Enable audit logging

ENABLE_NOTIFICATIONS=true
# Enable in-app notifications

ENABLE_DOCUMENTS_GENERATION=true
# Enable PDF document generation

ENABLE_DEV_MENU=true
# Enable development menu (development only)

ENABLE_API_LOGGING=true
# Enable API request/response logging (development only)

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME=Rez Merchant
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Support URLs
PRIVACY_POLICY_URL=https://rezmerchant.com/privacy
TERMS_OF_SERVICE_URL=https://rezmerchant.com/terms
SUPPORT_EMAIL=support@rezmerchant.com
SUPPORT_URL=https://help.rezmerchant.com
WEBSITE_URL=https://rezmerchant.com

# =============================================================================
# CACHE CONFIGURATION (React Query)
# =============================================================================
CACHE_ENABLED=true
# Enable React Query caching

CACHE_TIME=300000
# Cache time in milliseconds (5 minutes)

STALE_TIME=60000
# Stale time in milliseconds (1 minute)

REFETCH_ON_WINDOW_FOCUS=true
# Refetch data when app comes to foreground

# =============================================================================
# PAGINATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
# Default number of items per page

MAX_PAGE_SIZE=100
# Maximum number of items per page

PRODUCTS_PAGE_SIZE=20
# Products list page size

ORDERS_PAGE_SIZE=20
# Orders list page size

CUSTOMERS_PAGE_SIZE=20
# Customers list page size

# =============================================================================
# RATE LIMITING (Client-Side)
# =============================================================================
API_RATE_LIMIT=100
# Maximum API requests per minute (client-side throttling)

RETRY_ATTEMPTS=3
# Number of retry attempts for failed API calls

RETRY_DELAY=1000
# Delay between retry attempts in milliseconds

BACKOFF_MULTIPLIER=2
# Exponential backoff multiplier for retries

# =============================================================================
# PERFORMANCE & IMAGE OPTIMIZATION
# =============================================================================
ENABLE_PERFORMANCE_MONITORING=true
# Enable performance monitoring

IMAGE_QUALITY=80
# Image quality for uploads (0-100)

IMAGE_MAX_WIDTH=1920
# Maximum image width for uploads

IMAGE_MAX_HEIGHT=1080
# Maximum image height for uploads

ENABLE_IMAGE_COMPRESSION=true
# Enable automatic image compression

THUMBNAIL_SIZE=300
# Thumbnail size in pixels

# =============================================================================
# LOCALIZATION
# =============================================================================
DEFAULT_LANGUAGE=en
# Default app language (ISO 639-1 code)

SUPPORTED_LANGUAGES=en,es,fr,de
# Comma-separated list of supported languages

DEFAULT_CURRENCY=USD
# Default currency code (ISO 4217)

DEFAULT_TIMEZONE=America/New_York
# Default timezone (IANA timezone identifier)

DATE_FORMAT=MM/DD/YYYY
# Default date format

TIME_FORMAT=12h
# Time format: 12h or 24h

# =============================================================================
# SECURITY
# =============================================================================
ENABLE_SSL_PINNING=false
# Enable SSL certificate pinning (production only)

ENABLE_ROOT_DETECTION=false
# Enable root/jailbreak detection (production only)

ENABLE_SCREENSHOT_PROTECTION=false
# Prevent screenshots of sensitive screens (optional)

ENABLE_BIOMETRIC_AUTH=true
# Enable biometric authentication (fingerprint/face)

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_REDUX_DEVTOOLS=false
# Enable Redux DevTools (if using Redux)

ENABLE_REACT_QUERY_DEVTOOLS=true
# Enable React Query DevTools (development only)

DEBUG_MODE=true
# Enable debug logging (development only)

LOG_LEVEL=debug
# Options: error, warn, info, debug, verbose

SHOW_PERFORMANCE_OVERLAY=false
# Show performance overlay (development only)

# =============================================================================
# TESTING
# =============================================================================
MOCK_API=false
# Use mock API data (for testing without backend)

TEST_MODE=false
# Enable test mode (disables certain features for testing)

ENABLE_E2E_TESTING=false
# Enable end-to-end testing mode

# =============================================================================
# OFFLINE MODE
# =============================================================================
OFFLINE_QUEUE_MAX_SIZE=100
# Maximum number of offline actions to queue

OFFLINE_SYNC_INTERVAL=60000
# Sync interval when back online (milliseconds)

OFFLINE_STORAGE_LIMIT=50
# Maximum MB for offline storage

# =============================================================================
# NOTIFICATIONS
# =============================================================================
NOTIFICATION_SOUND_ENABLED=true
# Enable notification sounds

NOTIFICATION_VIBRATION_ENABLED=true
# Enable notification vibrations

NOTIFICATION_BADGE_ENABLED=true
# Enable app badge count

# =============================================================================
# ANALYTICS SETTINGS
# =============================================================================
TRACK_PAGE_VIEWS=true
# Track page/screen views

TRACK_USER_ACTIONS=true
# Track user actions/events

TRACK_ERRORS=true
# Track errors and crashes

TRACK_PERFORMANCE=true
# Track performance metrics

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================

# Stripe (Payment Processing) - OPTIONAL
# STRIPE_PUBLISHABLE_KEY=pk_test_your_key
# STRIPE_SECRET_KEY=sk_test_your_key
# Note: Never commit secret keys!

# Twilio (SMS/Voice) - OPTIONAL
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email) - OPTIONAL
# SENDGRID_API_KEY=your_api_key
# SENDGRID_FROM_EMAIL=noreply@rezmerchant.com

# Google Maps - OPTIONAL
# GOOGLE_MAPS_API_KEY=your_maps_api_key

# Firebase - OPTIONAL
# FIREBASE_API_KEY=your_api_key
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# FIREBASE_APP_ID=your_app_id

# =============================================================================
# PRODUCTION CONFIGURATION EXAMPLE
# =============================================================================
# Uncomment and use these for production:
#
# NODE_ENV=production
# APP_ENV=production
# EXPO_DEBUG=false
# EXPO_PUBLIC_API_BASE_URL=https://api.rezmerchant.com/api/v1
# SOCKET_URL=wss://api.rezmerchant.com
# SENTRY_ENABLED=true
# ANALYTICS_ENABLED=true
# ENABLE_DEV_MENU=false
# ENABLE_API_LOGGING=false
# DEBUG_MODE=false
# LOG_LEVEL=error
# ENABLE_PERFORMANCE_MONITORING=true
# ENABLE_SSL_PINNING=true
# ENABLE_ROOT_DETECTION=true

# =============================================================================
# NOTES & BEST PRACTICES
# =============================================================================
# 1. NEVER commit the actual .env file to version control!
# 2. Keep .env in .gitignore at all times
# 3. Use different values for development, staging, and production
# 4. Store production secrets in secure environment variable services (AWS Secrets Manager, etc.)
# 5. Rotate API keys and tokens regularly for security
# 6. Document any new environment variables you add here
# 7. Prefix all public Expo variables with EXPO_PUBLIC_
# 8. Keep sensitive keys (API secrets, private keys) out of EXPO_PUBLIC_ variables
# 9. Use .env.local for local overrides (also add to .gitignore)
# 10. Review this file before each deployment to ensure correct values
# =============================================================================
